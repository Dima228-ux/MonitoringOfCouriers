<Window x:Class="WpfAppiClient.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppiClient"
        mc:Ignorable="d"
        Title="WindowLogin" Height="450" Width="800">
    <Grid>
    <Image Source="Resourses/Fone.jpg"/>
    <StackPanel Height="60" Width="300" VerticalAlignment="Top" Margin="75">
        <TextBlock Height="40" Margin="10" FontFamily="Brush Script MT" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top">Welcome!</TextBlock>
    </StackPanel>
    <StackPanel Height="160" Width="250">
        <TextBlock FlowDirection="LeftToRight"  HorizontalAlignment="Left" Height="30"  Width="60" FontSize="20" FontStyle="Oblique">Login</TextBlock>
        <TextBox  Name="TextBoxLogin" Height="25" Width="200"></TextBox>
        <TextBlock FlowDirection="LeftToRight"  HorizontalAlignment="Left" Height="30"  Width="90" FontSize="20" FontStyle="Oblique">Password</TextBlock>
        <PasswordBox Name="Password" PasswordChar="*" Height="25" Width="200" />
        <Button Name="ButtonLogin" Height="40" Width="200" Margin="5"  Background="BurlyWood" Click="ButtonLogin_Click" FontSize="20" FontStyle="Oblique">Login</Button>
    </StackPanel>

    </Grid>
</Window>
